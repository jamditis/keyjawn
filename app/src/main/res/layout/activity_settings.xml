<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Theme section (premium only) -->
        <LinearLayout
            android:id="@+id/theme_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/theme_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Hosts section (full flavor only) -->
        <LinearLayout
            android:id="@+id/host_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSH hosts"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/host_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/add_host_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Add host"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Slash commands section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slash command sets"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/command_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/add_command_set_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add command set"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Upgrade -->
        <Button
            android:id="@+id/upgrade_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Upgrade to full version ($3.99)"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:backgroundTint="#2E7D32"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <!-- About -->
        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
