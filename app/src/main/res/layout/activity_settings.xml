<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hosts section (full flavor only) -->
        <LinearLayout
            android:id="@+id/host_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSH hosts"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/host_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/add_host_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Add host"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Slash commands section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slash command sets"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/command_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- About -->
        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
