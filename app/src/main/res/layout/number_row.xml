<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/number_row"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:background="@color/extra_row_bg"
    android:gravity="center_vertical"
    android:paddingStart="2dp"
    android:paddingEnd="2dp">

    <Button
        android:id="@+id/num_1"
        style="@style/NumberKey"
        android:text="1" />

    <Button
        android:id="@+id/num_2"
        style="@style/NumberKey"
        android:text="2" />

    <Button
        android:id="@+id/num_3"
        style="@style/NumberKey"
        android:text="3" />

    <Button
        android:id="@+id/num_4"
        style="@style/NumberKey"
        android:text="4" />

    <Button
        android:id="@+id/num_5"
        style="@style/NumberKey"
        android:text="5" />

    <Button
        android:id="@+id/num_6"
        style="@style/NumberKey"
        android:text="6" />

    <Button
        android:id="@+id/num_7"
        style="@style/NumberKey"
        android:text="7" />

    <Button
        android:id="@+id/num_8"
        style="@style/NumberKey"
        android:text="8" />

    <Button
        android:id="@+id/num_9"
        style="@style/NumberKey"
        android:text="9" />

    <Button
        android:id="@+id/num_0"
        style="@style/NumberKey"
        android:text="0" />

</LinearLayout>
