<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/number_row"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:background="@color/extra_row_bg"
    android:gravity="center_vertical"
    android:paddingStart="2dp"
    android:paddingEnd="2dp">

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="1" />
        <TextView style="@style/NumberKeyHint" android:text="!" />
        <Button android:id="@+id/num_1" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="2" />
        <TextView style="@style/NumberKeyHint" android:text="\@" />
        <Button android:id="@+id/num_2" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="3" />
        <TextView style="@style/NumberKeyHint" android:text="#" />
        <Button android:id="@+id/num_3" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="4" />
        <TextView style="@style/NumberKeyHint" android:text="$" />
        <Button android:id="@+id/num_4" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="5" />
        <TextView style="@style/NumberKeyHint" android:text="%" />
        <Button android:id="@+id/num_5" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="6" />
        <TextView style="@style/NumberKeyHint" android:text="^" />
        <Button android:id="@+id/num_6" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="7" />
        <TextView style="@style/NumberKeyHint" android:text="&amp;" />
        <Button android:id="@+id/num_7" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="8" />
        <TextView style="@style/NumberKeyHint" android:text="*" />
        <Button android:id="@+id/num_8" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="9" />
        <TextView style="@style/NumberKeyHint" android:text="(" />
        <Button android:id="@+id/num_9" style="@style/NumberKeyOverlay" />
    </FrameLayout>

    <FrameLayout style="@style/NumberKeyFrame">
        <TextView style="@style/NumberKeyLabel" android:text="0" />
        <TextView style="@style/NumberKeyHint" android:text=")" />
        <Button android:id="@+id/num_0" style="@style/NumberKeyOverlay" />
    </FrameLayout>

</LinearLayout>
