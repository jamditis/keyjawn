---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="feature-card card">
  {icon && <div class="feature-icon">{icon}</div>}
  <h3 class="feature-title"><span class="prompt-prefix">$</span> {title}</h3>
  <p class="feature-desc">{description}</p>
  <slot />
</div>

<style>
  .feature-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .feature-icon {
    font-size: 1.75rem;
    line-height: 1;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--code-bg);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    color: var(--accent);
    font-family: var(--font-mono);
  }

  .feature-title {
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: 500;
    color: #e0e0e8;
  }

  .prompt-prefix {
    color: var(--text-muted);
    font-weight: 400;
  }

  .feature-desc {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 0;
  }
</style>
