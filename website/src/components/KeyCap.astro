---
interface Props {
  label: string;
}

const { label } = Astro.props;

const actionMap: Record<string, string> = {
  'Esc': 'esc',
  'Tab': 'tab',
  'Ctrl': 'ctrl',
  '<': 'left',
  '>': 'right',
  'Mic': 'mic',
  'SCP': 'scp',
};

const action = actionMap[label] || label.toLowerCase();
---

<kbd data-hero-key={action}>{label}</kbd>
