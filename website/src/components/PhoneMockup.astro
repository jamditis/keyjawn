---

<div class="phone-mockup">
  <svg viewBox="0 0 280 540" fill="none" xmlns="http://www.w3.org/2000/svg" class="phone-frame">
    <!-- Phone body -->
    <rect x="2" y="2" width="276" height="536" rx="32" stroke="#2a2a3a" stroke-width="3" fill="#0a0a0f" />
    <!-- Notch -->
    <rect x="95" y="2" width="90" height="22" rx="0 0 11 11" fill="#1a1a26" />
    <circle cx="140" cy="12" r="5" fill="#2a2a3a" />
    <!-- Screen area -->
    <rect x="12" y="32" width="256" height="470" rx="4" fill="#0d0d14" />

    <!-- Terminal session content -->
    <text x="22" y="58" font-family="monospace" font-size="9" fill="#5a5a6e">jamditis@pi:~$</text>
    <text x="22" y="72" font-family="monospace" font-size="9" fill="#6cf2a8">claude</text>
    <text x="22" y="92" font-family="monospace" font-size="9" fill="#5a5a6e">Claude Code v1.2.0</text>
    <text x="22" y="106" font-family="monospace" font-size="9" fill="#5a5a6e">Type your message...</text>
    <text x="22" y="126" font-family="monospace" font-size="9" fill="#c8c8d0">> fix the auth bug in</text>
    <text x="22" y="140" font-family="monospace" font-size="9" fill="#c8c8d0">  login.ts</text>
    <rect x="22" y="145" width="6" height="12" fill="#6cf2a8" opacity="0.7">
      <animate attributeName="opacity" values="0.7;0;0.7" dur="1s" repeatCount="indefinite" />
    </rect>

    <!-- Separator line -->
    <line x1="12" y1="360" x2="268" y2="360" stroke="#1e1e2a" stroke-width="1" />

    <!-- Number row -->
    <g font-family="monospace" font-size="9" text-anchor="middle">
      <g transform="translate(0, 370)">
        {[1,2,3,4,5,6,7,8,9,0].map((n, i) => (
          <>
            <rect x={17 + i * 25} y="0" width="22" height="20" rx="3" fill="#1a1a26" stroke="#2a2a3a" stroke-width="0.5" />
            <text x={28 + i * 25} y="14" fill="#c8c8d0" font-size="9">{n}</text>
          </>
        ))}
      </g>
    </g>

    <!-- Extra row: Esc Tab Ctrl < > Upload Mic -->
    <g font-family="monospace" font-size="7" text-anchor="middle" transform="translate(0, 396)">
      <rect x="17" y="0" width="30" height="18" rx="3" fill="#14141c" stroke="#2a2a3a" stroke-width="0.5" />
      <text x="32" y="12" fill="#6cf2a8" font-size="7">Esc</text>
      <rect x="51" y="0" width="30" height="18" rx="3" fill="#14141c" stroke="#2a2a3a" stroke-width="0.5" />
      <text x="66" y="12" fill="#6cf2a8" font-size="7">Tab</text>
      <rect x="85" y="0" width="30" height="18" rx="3" fill="#14141c" stroke="#2a2a3a" stroke-width="0.5" />
      <text x="100" y="12" fill="#6cf2a8" font-size="7">Ctrl</text>

      <rect x="125" y="0" width="22" height="18" rx="3" fill="#14141c" stroke="#2a2a3a" stroke-width="0.5" />
      <text x="136" y="12" fill="#c8c8d0" font-size="9">&lt;</text>
      <rect x="151" y="0" width="22" height="18" rx="3" fill="#14141c" stroke="#2a2a3a" stroke-width="0.5" />
      <text x="162" y="12" fill="#c8c8d0" font-size="9">&gt;</text>

      <rect x="183" y="0" width="34" height="18" rx="3" fill="#14141c" stroke="#2a2a3a" stroke-width="0.5" />
      <text x="200" y="12" fill="#5a5a6e" font-size="7">SCP</text>
      <rect x="221" y="0" width="34" height="18" rx="3" fill="#14141c" stroke="#2a2a3a" stroke-width="0.5" />
      <text x="238" y="12" fill="#f26c8a" font-size="7">MIC</text>
    </g>

    <!-- QWERTY rows -->
    <g font-family="monospace" font-size="10" text-anchor="middle">
      <!-- Row 1: QWERTYUIOP -->
      <g transform="translate(0, 420)">
        {['q','w','e','r','t','y','u','i','o','p'].map((k, i) => (
          <>
            <rect x={17 + i * 25} y="0" width="22" height="24" rx="3" fill="#1a1a26" stroke="#2a2a3a" stroke-width="0.5" />
            <text x={28 + i * 25} y="16" fill="#c8c8d0">{k}</text>
          </>
        ))}
      </g>
      <!-- Row 2: ASDFGHJKL -->
      <g transform="translate(12, 448)">
        {['a','s','d','f','g','h','j','k','l'].map((k, i) => (
          <>
            <rect x={17 + i * 25} y="0" width="22" height="24" rx="3" fill="#1a1a26" stroke="#2a2a3a" stroke-width="0.5" />
            <text x={28 + i * 25} y="16" fill="#c8c8d0">{k}</text>
          </>
        ))}
      </g>
      <!-- Row 3: ZXCVBNM -->
      <g transform="translate(24, 476)">
        {['z','x','c','v','b','n','m'].map((k, i) => (
          <>
            <rect x={17 + i * 25} y="0" width="22" height="24" rx="3" fill="#1a1a26" stroke="#2a2a3a" stroke-width="0.5" />
            <text x={28 + i * 25} y="16" fill="#c8c8d0">{k}</text>
          </>
        ))}
      </g>
    </g>

    <!-- Home indicator -->
    <rect x="110" y="518" width="60" height="4" rx="2" fill="#2a2a3a" />
  </svg>
</div>

<style>
  .phone-mockup {
    max-width: 280px;
    margin: 0 auto;
    filter: drop-shadow(0 20px 60px rgba(108, 242, 168, 0.08));
  }

  .phone-frame {
    width: 100%;
    height: auto;
  }
</style>
